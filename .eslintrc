{
    "extends": ["airbnb-base"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", {
            "code": 120
        }],
        "import/extensions": ["error", "ignorePackages", {
            "js": "always",
            "jsx": "never"
        }],
        "no-console": "off"
    }
}
